<div class="clone-component-description">
    <div data-c-container="medium">
        <div data-c-card data-c-background="white(100)" data-c-radius="rounded" data-c-padding="all(2)">
            <span id="content"></span>
            <h3 data-c-font-size="h4">Using {{ component.plural|title }}</h3>
            {% for item in component.description %}
                {% if item == component.description|last %}
                    <p data-c-margin="top(.5)">{{ item }}</p>
                {% else %}
                    <p data-c-margin="tb(.5)">{{ item }}</p>
                {% endif %}
            {% endfor %}
            {% if component.usage is empty %}
                {# do nothing #}
            {% else %}
                <h3 data-c-font-size="h4" data-c-margin="top(2)">Markup</h3>
                {% for item in component.usage %}
                    <p data-c-margin="top(.5)"><code class="language-html">{% filter escape %}{{ item }}{% endfilter %}</code></p>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</div>